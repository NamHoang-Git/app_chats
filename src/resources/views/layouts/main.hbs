<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Example App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    <div class="root">
        {{> header}}

        <div class="container">
            {{{body}}}
        </div>

        {{> footer}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();

        $(document).ready(function() {
            $('#sendButton').on('click', function() {
                const name = $('#name').val();
                const message = $('#message').val();
                
                // Kiểm tra nếu có tên và tin nhắn trước khi gửi
                if (name && message) {
                    // Gửi tin nhắn tới server
                    sendMessage({ name, message });
                    $('#message').val(''); // Xóa ô nhập tin nhắn
                } else {
                    alert('Vui lòng nhập họ tên và tin nhắn!');
                }
            });

            // Lấy và hiển thị tin nhắn đã có từ server
            getMessages();

            // Lắng nghe tin nhắn mới từ server
            socket.on('message', addMessages);
        });

        function addMessages(message) {
            $("#messages").append(`
                <h4>${message.name}</h4>
                <p>${message.message}</p>
            `);
        }

        function getMessages() {
            $.get('/messages', (data) => {
                data.forEach(addMessages);
            });
        }

        function sendMessage(message) {
            $.post('/messages', message, () => {
                socket.emit('message', message); // Gửi tin nhắn tới Socket.IO
            });
        }
    </script>
</body>
</html>